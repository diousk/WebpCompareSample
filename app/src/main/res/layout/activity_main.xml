<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/coilText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="coil" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivWebp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/coilText" />

    <Button
        android:id="@+id/nativeText"
        android:layout_alignStart="@+id/ivWebp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="native" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivWebp2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/nativeText"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/frescoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivWebp"
        android:layout_marginTop="20dp"
        android:text="fresco" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ivWebp3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        fresco:actualImageScaleType="centerInside"
        android:layout_below="@+id/frescoText" />


</RelativeLayout>
